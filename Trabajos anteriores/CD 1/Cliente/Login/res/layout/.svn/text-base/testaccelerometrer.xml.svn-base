<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent"
    android:background="#FFFFFF">
    <TableRow> 
        <TextView 
            android:text="Acc. en X:"
            android:width ="120px"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView 
            android:id="@+id/txtAccX" 
            android:width="100px" />
    </TableRow> 
    <TableRow>
        <TextView
            android:text="Acc. en Y:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccY" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Acc. en Z:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccZ" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="G. sobre eje X:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtGiroX" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="G. sobre eje Y:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtGiroY" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="G. sobre eje Z:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtGiroZ" 
             android:width="100px" 
            />
    </TableRow>
     <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="¿Giro válido?:"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtGiroValido" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="Acc. normalizada (eje X):"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccXSuelo" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="Acc. normalizada (eje Y):"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccYSuelo" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="Acc.normalizada (eje Z):"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccZSuelo" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="AccX mapa(si pos. ok):"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccXMapa" 
             android:width="100px" 
            />
    </TableRow>
    <TableRow
    android:layout_marginTop="2px">
        <TextView
            android:text="AccY mapa(si pos. ok):"
            android:textStyle="bold"
            android:padding="3px"
            android:textSize="18sp"
            android:textColor="#001111"
            />
        <TextView
            android:id="@+id/txtAccYMapa" 
             android:width="100px" 
            />
    </TableRow>
</TableLayout>